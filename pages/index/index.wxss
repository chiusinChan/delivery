.banner,swiper {
  height: 314rpx;
  width: 100%;
}

.banner image {
  height: 100%;
  width: 100%;
}

.wrap {
  position: absolute;
  top: 366rpx;
  bottom: 0rpx;
  left: 0;
  right: 0;
}

.wrap .sideBar {
  float: left;
  width: 250rpx;
  height: 100%;
}

.wrap .goodsList {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 276rpx;
  right: 0;
  height: 100%;
  width: auto;
}

.menuItem {
  height: 248rpx;
  overflow: hidden;
  padding: 25rpx 25rpx 0 28rpx;
  box-sizing: border-box;
  background-color: #f6f6f4;
}

.menuItem .photo {
  text-align: center;
}

.menuItem .kind {
  margin-top: 14rpx;
  color: #333;
  font-size: 29rpx;
}

.menuItem .des {
  color: #999;
  font-size: 22rpx;
}

.menuItem .photo image {
  width: 197rpx;
  height: 103rpx;
}

.menuItem.select {
  background-color: #fff;
}

.goodsList .kind .title {
  color: #333;
  font-size: 29rpx;
  padding: 15rpx 0;
}
.goodsList .item {
  margin-bottom: 20rpx;
}

.goodsList .item .photo {
  float: left;
  height: 136rpx;
  width: 136rpx;
  margin-right: 17rpx;
}

.goodsList .item .info {
  overflow: hidden;
  height: 136rpx;
}

.goodsList .item .name {
  color: #333;
  font-size: 29rpx;
  line-height: 29rpx;
  vertical-align: text-top;
  margin-bottom: 10rpx;
}

.goodsList .item .des {
  color: #999;
  font-size: 20rpx;
  margin-bottom: 6rpx;
}

.goodsList .item .sold {
  color: #999;
  font-size: 20rpx;
}
.goodsList .item .buy{
  width: 100%;
  height: 40rpx;
}

.goodsList .item .buy .price {
  color: #333;
  font-size: 22rpx;
  float: left;
  
}

.goodsList .item .buy .price text {
  color: #333;
  font-size: 29rpx;
}

.goodsList .item .buy .store  {
  float: right;
  width: 134rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding:3rpx 22rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  
}
.goodsList .item .buy .store .num{
  margin-top: -10rpx;
}
.goodsList .item .buy .store>view  {
  float: left;
line-height: 40rpx;
color:#DB616C;
font-size: 29rpx;  
}
.goodsList .item .buy .store image {
  height: 27rpx;
  width: 27rpx;
}
