.bodyWrap {
  background-color: #f3f3f3;
  position: absolute;
  top: 0;
  bottom: 0;
  box-sizing: border-box;
  left: 0;
  right: 0;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.tabTitle {
  display: flex;
  background-color: #fff;
  height: 67rpx;
  line-height: 67rpx;
  color: #999;
  font-size: 29rpx;
  padding: 0rpx 90rpx;
  box-sizing: border-box;
  justify-content: space-around;
}

.select {
  color: #d95b67;
  position: relative;
}

.select .selectBorder {
  background-color: #d95b67;
  height: 3rpx;
  width: 25rpx;
  border-radius: 2rpx;
  position: absolute;
  bottom: 3rpx;
  left: 50%;
  transform: translateX(-50%);
}

.tabContent {
  position: absolute;
  width: 100%;
  top: 69rpx;
  bottom: 0;
  overflow: scroll;
}

.tabContent .contentItem {
  background-color: #fff;
  height: 352rpx;
  padding: 0 32rpx;
  box-sizing: border-box;
  width: 100%;
  margin-top: 10rpx;
}

.tabContent .contentItem .orderStatus {
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  height: 80rpx;
  color: #999;
  font-size: 26rpx;
  line-height: 80rpx;
}

.tabContent .contentItem .orderStatus .id {
  float: left;
}

.tabContent .contentItem .orderStatus .status {
  float: right;
}

.tabContent .contentItem  .orderInfo {
  height: 66rpx;
  line-height: 66rpx;
}

.tabContent .contentItem  .orderInfo .address {
  font-size: 28rpx;
  width: 490rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  float: left;
}

.tabContent .contentItem  .orderInfo .time {
  font-size: 22rpx;
  color: #999;
  float: right;
}

.tabContent .contentItem  .goodsInfo image {
  width: 81rpx;
  height: 81rpx;
}

.tabContent .contentItem  .goodsInfo image+image {
  margin-left: 10rpx;
}

.tabContent .contentItem  .goodsInfo .goodsDes {
  font-size: 20rpx;
  color: #333;
}

.tabContent .contentItem  .more {
  height: 88rpx;
  line-height: 88rpx;
  font-size: 29rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tabContent .contentItem  .again {
  width: 88rpx;
  padding: 0 5rpx;
  height: 28rpx;
  line-height: 28rpx;
  font-size: 22rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  border: 1rpx solid rgba(207, 207, 207, 1);
}
